<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainDrawer"
    android:layout_weight="1"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context=".showAngle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_greyish">


        <TextView
            android:id="@+id/lastText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.426" />

        <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
            android:id="@+id/barOfY"
            android:layout_width="286dp"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:background="@color/white_greyish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.272"
            app:layout_constraintStart_toEndOf="@+id/textView51"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.614"
            app:rcAnimationEnable="true"
            app:rcAnimationSpeedScale="5"
            app:rcBackgroundColor="@color/white_greyish"
            app:rcBackgroundPadding="2dp"
            app:rcRadius="10dp"
            app:rcReverse="false"
            app:rcSecondaryProgressColor="@color/purple_200"
            app:rcTextInsideGravity="end"
            app:rcTextPositionPriority="inside"
            app:rcTextProgressColor="#111111"></com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/appBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2B304C"
                app:navigationIcon="@drawable/ic_baseline_menu_24"
                />


        </com.google.android.material.appbar.AppBarLayout>


        <Button
            android:id="@+id/button82"
            android:layout_width="133dp"
            android:layout_height="67dp"
            android:text="Detailed Analysis"
            app:backgroundTint="#2B304C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.947"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.855" />

        <Button
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Device"
            app:backgroundTint="#2B304C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.105" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="108dp"
            android:layout_height="38dp"
            android:text="Forward"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.342" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="106dp"
            android:layout_height="38dp"
            android:text="Backward"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.474" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="106dp"
            android:layout_height="38dp"
            android:text="Right"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.614" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="106dp"
            android:layout_height="38dp"
            android:text="Left"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.751" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="248dp"
            android:layout_height="33dp"
            android:text="Posture Assesment"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.234" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnect"
            app:backgroundTint="#2B304C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.949"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.105" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.122"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.843" />

        <TextView
            android:id="@+id/textviewOfBattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_ _"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.37"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.844" />

        <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
            android:id="@+id/linearBarX"
            android:layout_width="286dp"
            android:layout_height="38dp"
            android:background="@color/white_greyish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.105"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="@+id/appBarLayout"
            app:layout_constraintVertical_bias="0.341"
            app:rcAnimationEnable="true"
            app:rcAnimationSpeedScale="5"
            app:rcBackgroundColor="@color/white_greyish"
            app:rcBackgroundPadding="2dp"
            app:rcProgressColors="@array/progress_gradient"
            app:rcRadius="10dp"
            app:rcReverse="false"
            app:rcSecondaryProgressColor="@color/purple_200"
            app:rcTextInsideGravity="end"
            app:rcTextPositionPriority="inside"
            app:rcTextProgressColor="#111111"></com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar>

        <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
            android:id="@+id/linearBarXnegative"
            android:layout_width="286dp"
            android:layout_height="38dp"
            android:background="@color/white_greyish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.105"
            app:layout_constraintStart_toEndOf="@+id/textView50"
            app:layout_constraintTop_toTopOf="@+id/appBarLayout"
            app:layout_constraintVertical_bias="0.474"
            app:rcAnimationEnable="true"
            app:rcAnimationSpeedScale="5"
            app:rcBackgroundColor="@color/white_greyish"
            app:rcBackgroundPadding="2dp"
            app:rcRadius="10dp"
            app:rcReverse="false"
            app:rcSecondaryProgressColor="@color/purple_200"
            app:rcTextInsideGravity="end"
            app:rcTextPositionPriority="inside"
            app:rcTextProgressColor="#111111"></com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar>

        <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
            android:id="@+id/negativeY"
            android:layout_width="286dp"
            android:layout_height="38dp"
            android:background="@color/white_greyish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toEndOf="@+id/textView52"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.751"
            app:rcAnimationEnable="true"
            app:rcAnimationSpeedScale="5"
            app:rcBackgroundColor="@color/white_greyish"
            app:rcBackgroundPadding="2dp"
            app:rcRadius="10dp"
            app:rcReverse="false"
            app:rcSecondaryProgressColor="@color/purple_200"
            app:rcTextInsideGravity="end"
            app:rcTextPositionPriority="inside"
            app:rcTextProgressColor="#111111"></com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar>

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/red_one"
            android:layout_width="200dp"

            android:layout_height="200dp"

            android:background="@android:color/transparent"

            app:drawBackgroundOutsideProgress="true"

            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.403"
            app:line_count="30"
            app:line_width="4dp"
            app:progress_background_color="@color/button_selectorcolor"
            app:progress_blur_radius="0dp"
            app:progress_blur_style="solid"
            app:progress_end_color="#21C5A5"
            app:progress_shader="sweep"
            app:progress_start_color="#26AE94"
            app:progress_start_degree="-90"
            app:progress_stroke_cap="round"
            app:progress_stroke_width="20dp"
            app:progress_style="solid_line"
            app:progress_text_color="@android:color/transparent"
            app:progress_text_size="8dp" />
        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/yellow_one"
            android:layout_width="200dp"

            android:layout_height="200dp"

            android:background="@android:color/transparent"

            app:drawBackgroundOutsideProgress="true"

            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.403"
            app:line_count="30"
            app:line_width="4dp"
            app:progress_background_color="@android:color/transparent"
            app:progress_blur_radius="0dp"
            app:progress_blur_style="solid"
            app:progress_end_color="#21C5A5"
            app:progress_shader="sweep"
            app:progress_start_color="#26AE94"
            app:progress_start_degree="-90"
            app:progress_stroke_cap="round"
            app:progress_stroke_width="20dp"
            app:progress_style="solid_line"
            app:progress_text_color="@android:color/transparent"
            app:progress_text_size="8dp" />

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/green_one"
            android:layout_width="200dp"

            android:layout_height="200dp"

            android:background="@android:color/transparent"

            app:drawBackgroundOutsideProgress="true"

            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.403"
            app:line_count="30"
            app:line_width="4dp"
            app:progress_background_color="@android:color/transparent"
            app:progress_blur_radius="0dp"
            app:progress_blur_style="solid"
            app:progress_end_color="#21C5A5"
            app:progress_shader="sweep"
            app:progress_start_color="#26AE94"
            app:progress_start_degree="-90"
            app:progress_stroke_cap="round"
            app:progress_stroke_width="20dp"
            app:progress_style="solid_line"
            app:progress_text_color="@android:color/transparent"
            app:progress_text_size="8dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu"
        tools:ignore="MissingConstraints">
    </com.google.android.material.navigation.NavigationView>







</androidx.drawerlayout.widget.DrawerLayout>




